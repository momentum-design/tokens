{
  "codeinput": {
    "comment": "Applied to code or 'pin' input",
    "figma": "https://www.figma.com/file/NaNrfXjygZtRgMfHAFHjsp/Components---Windows%2BWeb?node-id=4341%3A6827",
    "#normal": {
      "background": "@color-theme-background-solid-primary-normal",
      "text": "@color-theme-text-primary-normal",
      "border": "@color-theme-outline-input-normal"
    },
    "#hovered": {
      "background": "@color-theme-background-primary-hover",
      "text": "@color-theme-text-primary-normal",
      "border": "@color-theme-outline-input-normal"
    },
    "#active": {
      "background": "@color-theme-background-primary-active",
      "text": "@color-theme-text-primary-normal",
      "border": "@color-theme-outline-input-active"
    },
    "#focused": {
      "background": "@color-theme-background-solid-primary-normal",
      "text": "@color-theme-text-primary-normal",
      "border": "@color-theme-outline-theme-normal"
    },
    "#disabled": {
      "background": "@color-theme-background-primary-disabled",
      "text": "@color-theme-text-primary-normal",
      "border": "@color-theme-background-primary-ghost"
    },
    "error": {
      "#normal": {
        "background": "@color-theme-background-alert-error-normal",
        "text": "@color-theme-text-primary-normal",
        "border": "@color-theme-outline-cancel-normal"
      },
      "#hovered": {
        "background": "@color-theme-background-primary-hover",
        "text": "@color-theme-text-primary-normal",
        "border": "@color-theme-outline-cancel-normal"
      },
      "#active": {
        "background": "@color-theme-background-primary-hover",
        "text": "@color-theme-text-primary-normal",
        "border": "@color-theme-outline-cancel-normal"
      }
    }
  }
}
