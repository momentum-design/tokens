{
  "scrollbar": {
    "track": {
      "#normal": {
        "background": "@theme-common-hc-buttonFace"
      },
      "#disabled": {
        "background": "@color-theme-background-primary-disabled"
      }
    },
    "thumb": {
      "#normal": {
        "background": "@theme-common-hc-buttonText"
      },
      "#hovered": {
        "background": "@theme-common-hc-highlight"
      },
      "#pressed": {
        "background": "@theme-common-hc-highlight"
      },
      "#disabled": {
        "background": "@theme-common-hc-grayText"
      }
    },
    "arrow-button": {
      "#normal": {
        "text": "@theme-common-hc-highlightText",
        "background": "@theme-common-hc-buttonText"
      },
      "#hovered": {
        "text": "@theme-common-hc-highlightText",
        "background": "@theme-common-hc-highlight"
      },
      "#pressed": {
        "text": "@theme-common-hc-highlightText",
        "background": "@theme-common-hc-highlight"
      },
      "#disabled": {
        "text": "@theme-common-hc-highlightText",
        "background": "@theme-common-hc-grayText"
      }
    }
  }
}
