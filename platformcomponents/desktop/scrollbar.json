{
  "scrollbar": {
    "comment": "Scroll bar",
    "figma": "https://www.figma.com/file/NaNrfXjygZtRgMfHAFHjsp/Components---Windows%2BWeb?node-id=4469%3A8858",
    "track": {
      "#normal": {
        "background": "@color-theme-scrollbar-background-secondary-normal"
      },
      "#disabled": {
        "background": "@color-theme-background-primary-disabled"
      }
    },
    "thumb": {
      "#normal": {
        "background": "@color-theme-scrollbar-button-normal"
      },
      "#hovered": {
        "background": "@color-theme-scrollbar-button-hover"
      },
      "#pressed": {
        "background": "@color-theme-scrollbar-button-pressed"
      },
      "#disabled": {
        "background": "@color-theme-background-primary-disabled"
      }
    },
    "arrow-button": {
      "#normal": {
        "text": "@color-theme-scrollbar-arrow-normal",
        "background": "@color-theme-scrollbar-background-secondary-normal"
      },
      "#hovered": {
        "text": "@color-theme-scrollbar-button-hover",
        "background": "@color-theme-scrollbar-arrow-background-hover"
      },
      "#pressed": {
        "text": "@color-theme-scrollbar-arrow-background-pressed"
      },
      "#disabled": {
        "text": "@color-theme-text-primary-disabled",
        "background": "@color-theme-background-primary-disabled"
      }
    }
  }
}
