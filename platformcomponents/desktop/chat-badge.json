{
  "message-badge": {
    "figma": "https://www.figma.com/file/NaNrfXjygZtRgMfHAFHjsp/Components---Windows?node-id=5585%3A16947",
    "comment": "Color tokens for a conversation space badges",
    "regular": {
      "#normal": {
        "background": "@color-theme-background-secondary-normal",
        "text": "@color-theme-text-secondary-normal"
      },
      "#hovered": {
        "background": "@color-theme-background-secondary-hover",
        "text": "@color-theme-text-primary-normal"
      },
      "#active": {
        "background": "@color-theme-background-secondary-active",
        "text": "@color-theme-text-primary-normal"
      }
    },
    "important": {
      "#normal": {
        "background": "@color-theme-background-alert-theme-normal",
        "text": "@color-theme-text-accent-normal"
      },
      "#hovered": {
        "background": "@color-theme-background-alert-theme-hover",
        "text": "@color-theme-text-accent-hover"
      },
      "#active": {
        "background": "@color-theme-background-alert-theme-active",
        "text": "@color-theme-text-accent-active"
      }
    }
  }
}
